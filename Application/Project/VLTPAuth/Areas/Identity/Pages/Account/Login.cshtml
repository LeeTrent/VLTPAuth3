@page
@model LoginModel

@{
    ViewData["Title"] = "VLTP Employee Login";
}

<h2>@ViewData["Title"]</h2>
@if ( @ViewData["EEXAuthFailure"] != null)
{
    <h4 style="color:red;">@ViewData["EEXAuthFailure"]</h4>
}
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger" style="color:red;font-size:large;font-weight:bold;"></div>
                <div class="form-group">
                    <label>SSN (exclude hyphens):</label>
                    <input asp-for="Input.SSN" class="form-control" />
                    <span asp-validation-for="Input.SSN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>EEX PIN:</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
